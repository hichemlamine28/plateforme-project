# HTTP
server {
    listen 8080;  # Port HTTP alternatif

    server_name {{ inventory_hostname }};

    root /var/www/html;
    index index.html;
}


# HTTPS / SSL 
server {
    listen 8443 ssl;  # Port HTTPS alternatif

    server_name {{ inventory_hostname }};

    root /var/www/html;
    index index.html;

    ssl_certificate /var/web/cert.crt;
    ssl_certificate_key /var/web/cert.key;
    ssl_session_cache shared:SSL:1m;
    ssl_session_timeout 10m;
    ssl_ciphers PROFILE=SYSTEM;
    ssl_prefer_server_ciphers on;
}

